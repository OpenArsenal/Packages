pkgname=calibre
pkgver='9.0.0'
pkgrel=1
pkgdesc='Ebook management application'
arch=(x86_64 aarch64 i686)
url=https://calibre-ebook.com
license=(GPL-3.0-only)

provides=(calibre)
conflicts=(calibre-common calibre-python3)

_pydeps=(apsw
         beautifulsoup4
         css-parser
         cssselect
         dateutil
         dnspython
         faust-cchardet
         feedparser
         html2text
         html5-parser
         jeepney
         lxml
