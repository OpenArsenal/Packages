post_install() {
  echo >&2 'Enabling Wayland (ozone) for rambox-pro-bin...'
  /usr/share/libalpm/scripts/rambox-pro-bin-wayland-patch
}

post_upgrade() {
  echo >&2 'Enabling Wayland (ozone) for rambox-pro-bin...'
  /usr/share/libalpm/scripts/rambox-pro-bin-wayland-patch
}

pre_remove() {
  echo >&2 'Undoing modifications to rambox-pro-bin...'
  /usr/share/libalpm/scripts/rambox-pro-bin-wayland-unpatch
}
