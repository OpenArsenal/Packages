post_install() {
  echo >&2 'Enabling Wayland (ozone) for 1password...'
  /usr/share/libalpm/scripts/1password-wayland-patch
}

post_upgrade() {
  echo >&2 'Enabling Wayland (ozone) for 1password...'
  /usr/share/libalpm/scripts/1password-wayland-patch
}

pre_remove() {
  echo >&2 'Undoing modifications to 1password...'
  /usr/share/libalpm/scripts/1password-wayland-unpatch
}
